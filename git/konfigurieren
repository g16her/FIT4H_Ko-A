Parameter:
	--global
		#die Einstellungen gelten für alle git-Anwendungen dieses Users auf diesem Rechner

git config --global user.name "g16her"
	#der bei github.com gemappte Username sollte hier eingetragen werden

	git config --global user.mail "g16her@hotmail.de"

	git config --global credential.helper 'cache --timeout=36000'
		#Damit nicht bei jedem push Benutzer und Passwort eingeben
		werden muss werden die Daten für 36000 Sekunden gespeichert.
		